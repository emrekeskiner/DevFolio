@model DevFolio.Models.TblAbout
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Ekle</h2>

<br />
<div class="container">

    @if (ViewBag.countAbout > 0)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <div class="row d-flex align-items-center ">
                <div class="col">
                    Sadece bir adet Hakkımda yazısı olabilir.Lütfen mevcut hakkımda yazısını silin veya güncelleyin.
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <a href="/About/AboutList/" class="btn btn-danger">Geri dön</a>

                </div>
            </div>
        </div>

    }
    else
    {

        using (Html.BeginForm("CreateAbout", "About", FormMethod.Post))
        {
            <form class="form-group" method="post">
                <label>Açıklama</label>

                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows=6})
                <br />
               

                <button class="btn btn-primary">Kaydet</button>
            </form>

        }
    }
</div>

