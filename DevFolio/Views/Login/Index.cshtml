
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>

    <title>DevFolio Yönetim Paneli</title>
    <!-- Vendors styles-->
    <link rel="stylesheet" href="~/Templates/dist/vendors/simplebar/css/simplebar.css">
    <link rel="stylesheet" href="~/Templates/dist/css/vendors/simplebar.css">
    <!-- Main styles for this application-->
    <link href="~/Templates/dist/css/style.css" rel="stylesheet">
    <!-- We use those styles to show code examples, you should remove them in your application.-->
    <link href="~/Templates/dist/css/examples.css" rel="stylesheet">
</head>
<body>
    <div class="bg-light min-vh-100 d-flex flex-row align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="card-group d-block d-md-flex row">
                        <div class="card col-md-4 p-4 mb-0">
                            <div class="card-body">
                                <h3>DevFolio Yönetim Paneli</h3>
                                <p class="text-medium-emphasis">Bilgileriniz ile giriş yapın</p>
                                @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                                {
                            <div class="input-group mb-3">
                                <span class="input-group-text">
                                    <svg class="icon">
                                        <use xlink:href="~/Templates/dist/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                                    </svg>
                                </span>

                                <input class="form-control" name="UserName" type="text" placeholder="Kullanıcı Adı">
                            </div>
                                <div class="input-group mb-4">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                            <use xlink:href="~/Templates/dist/vendors/coreui/icons/svg/free.svg#cil-lock-locked"></use>
                                        </svg>
                                    </span>

                                    <input class="form-control" name="Password" type="password" placeholder="Şifre">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Giriş</button>
                                    </div>

                                </div>
                                }
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- CoreUI and necessary plugins-->
    <script src="~/Templates/dist/vendors/coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="~/Templates/dist/vendors/simplebar/js/simplebar.min.js"></script>
    <script></script>

</body>
</html>
