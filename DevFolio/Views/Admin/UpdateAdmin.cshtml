@model DevFolio.Models.TblAdmin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yönetici Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateAdmin", "Admin", FormMethod.Post))
    {
    <form class="form-group" method="post">
        <label>Kullanıcı Adı</label>
        @Html.HiddenFor(x => x.AdminID)
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" , @type="password" })
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </form>

    }
</div>

