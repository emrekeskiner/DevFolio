@model List<DevFolio.Models.TblProfile>
@{
    ViewBag.Title = "ProfileList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Listesi</h2>

<div class="container">
    @if (ViewBag.profileCount < 1)
    {
     <a href="/Profile/CreateProfile/" class="btn btn-info">Yeni Profil</a>
    }

    <br />
    <br />

    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Başlık</th>
            <th>E-mail</th>
            <th>Telefon</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {


            <tr>
                <td>@item.ProfileId</td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td><a href="/Profile/DeleteProfile/@item.ProfileId" class="btn btn-warning">Sil</a></td>
                <td><a href="/Profile/UpdateProfile/@item.ProfileId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }


    </table>
</div>

