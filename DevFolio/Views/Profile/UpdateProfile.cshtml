@model DevFolio.Models.TblProfile
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
    {
    <form class="form-group" method="post">
        <label>Adı Soyadı</label>
        @Html.HiddenFor(x=>x.ProfileId)
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <br />
        <label>E-Mail</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        <br />

        <label>Telefon</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        <br />

        <button class="btn btn-primary">Güncelle</button>
    </form>

    }
 </div>
