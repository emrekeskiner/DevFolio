@model DevFolio.Models.TblProfile

@{
    ViewBag.Title = "CreateProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Ekle</h2>

<br />
<div class="container">

    @if (ViewBag.countProfile > 0)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <div class="row d-flex align-items-center ">
                <div class="col">
                    Sadece bir adet profil olabilir.Lütfen mevcut profili silin yada güncelleyin.
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <a href="/Profile/ProfileList/" class="btn btn-danger">Geri dön</a>

                </div>
            </div>
                 </div>

    }
    else
    {

        using (Html.BeginForm("CreateProfile", "Profile", FormMethod.Post))
        {
<form class="form-group" method="post">
    <label>Adı Soyadı</label>

    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>E-Mail</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>

        }
    }
</div>

