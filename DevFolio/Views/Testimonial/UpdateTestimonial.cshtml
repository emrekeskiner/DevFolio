@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelle</h2>

<br />
<div class="container">

    @using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post))
    {
        <form class="form-group" method="post">
            @Html.HiddenFor(x=>x.TestimonialID)
            @Html.HiddenFor(x=>x.Status)
            <label>Adı Soyadı</label>

            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
            <br />
            <label>Açıklama</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            <br />
            <label>Resim Adresi</label>
            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
            <br />

            <button class="btn btn-primary">Kaydet</button>
        </form>

    }

</div>