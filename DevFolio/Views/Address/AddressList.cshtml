@model List<DevFolio.Models.TblAddress>
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Adres Bilgisi</h2>

<div class="container">
    @if (ViewBag.addressCount < 1)
    {
        <a href="/Address/CreateAddress/" class="btn btn-info">Yeni Adres</a>
    }

    <br />
    <br />

    <table class="table table-bordered">
        <tr class="table-secondary">
            <th>#</th>
            <th>Açıklama</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>E-mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {


            <tr>
                <td>@item.AddressID</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td><a href="/Address/DeleteAddress/@item.AddressID" class="btn btn-warning">Sil</a></td>
                <td><a href="/Address/UpdateAddress/@item.AddressID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }


    </table>
</div>

