@model DevFolio.Models.TblProject
@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Proje</h2>

<br />
<div class="container">

    @using (Html.BeginForm("CreateProject", "Project", FormMethod.Post))
    {
    <form class="form-group" method="post">
        <label>Proje Başlık</label>

        @Html.TextBoxFor(x => x.ProjectTitle, new { @class = "form-control" })
        <br />
        <label>Proje Kategorisi</label>
        @Html.DropDownListFor(m => m.TblCategory.CategoryID, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
        <br />
        <label>Proje Resim</label>
        @Html.TextBoxFor(x => x.CoverImageUrl, new { @class = "form-control" })
        <br />

        <button class="btn btn-primary">Kaydet</button>
    </form>

    }

</div>